# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 2 space indentation
[*.{js,html,css,json,yml}]
indent_style = space
indent_size = 2

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
indent_size = 4
